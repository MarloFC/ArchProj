generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String          @id @default(cuid())
  name          String?
  email         String          @unique
  emailVerified DateTime?
  image         String?
  admin         Boolean         @default(false) @map("Admin")
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  accounts      Account[]
  sessions      Session[]

  @@map(name: "users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map(name: "accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map(name: "sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map(name: "verificationtokens")
}

model SiteConfig {
  id              String   @id
  // Hero Section
  heroTitle       String   @default("Architectural Excellence")
  heroSubtitle    String   @default("Creating spaces that inspire and endure")
  heroDescription String   @default("Transform your vision into reality with our innovative architectural solutions.")
  heroButton1Text String   @default("View Projects")
  heroButton2Text String   @default("Get Consultation")

  // Navbar
  logoName        String   @default("ArchStudio")
  logoSvg         String?  // SVG path or icon identifier
  logoWidth       Int      @default(8)  // Width in Tailwind scale (e.g., 8 = w-8)
  logoHeight      Int      @default(8)  // Height in Tailwind scale (e.g., 8 = h-8)

  // Before & After Section
  beforeAfterTitle       String @default("Before & After")
  beforeAfterDescription String @default("See the transformation. Drag the slider to compare our architectural renovations.")
  beforeImage            String @default("https://images.unsplash.com/photo-1600607687920-4e2a09cf159d?w=1200&h=800&fit=crop")
  afterImage             String @default("https://images.unsplash.com/photo-1600607687644-c7171b42498b?w=1200&h=800&fit=crop")

  // Services Section
  servicesTitle       String @default("Our Services")
  servicesDescription String @default("We offer comprehensive architectural solutions tailored to your unique vision and requirements.")

  // Projects Section
  projectsTitle       String @default("Featured Projects")
  projectsDescription String @default("Explore our portfolio of innovative architectural designs")

  // Contact Section
  contactTitle       String @default("Ready to Start Your Project?")
  contactDescription String @default("Let's transform your vision into architectural reality. Contact us today for a consultation and discover how we can bring your ideas to life.")
  contactFormTitle   String @default("Send us a message")
  contactEmail       String @default("contact@architecturalexcellence.com")
  contactPhone       String @default("+1 (555) 123-4567")
  contactAddress     String @default("123 Design Street, Creative City, CC 12345")

  // Team Section
  teamTitle       String @default("Meet Our Team")
  teamSubtitle    String @default("The minds behind our vision")
  teamDescription String @default("Our team of passionate professionals is dedicated to transforming architectural dreams into reality.")

  // Colors
  primaryColor    String   @default("#000000")
  secondaryColor  String   @default("#ffffff")
  accentColor     String   @default("#6366f1")
  gradientFrom    String   @default("#6366f1")
  gradientTo      String   @default("#8b5cf6")

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map(name: "site_config")
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String
  textarea    String?  @db.Text
  imageUrl    String?
  category    String   @default("residential")
  featured    Boolean  @default(false)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map(name: "projects")
}

model Service {
  id                 String   @id @default(cuid())
  title              String
  description        String
  detailedDescription String?  @db.Text  // Longer description for modal
  icon               String   @default("building")  // Lucide icon name (fallback)
  iconSvg            String?  @db.Text  // Custom SVG code
  iconImageUrl       String? // Image URL for icon
  order              Int      @default(0)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@map(name: "services")
}

model TeamMember {
  id          String   @id @default(cuid())
  name        String
  role        String
  imageUrl    String
  linkedin    String?
  instagram   String?
  email       String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map(name: "team_members")
}

model Lead {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String   @db.Text
  project   String?
  createdAt DateTime @default(now())

  @@map(name: "leads")
}